# Source files (only need compiled output)
src/**
webview/**
*.ts
tsconfig.json

# Development files
.eslintrc*
*.map

# Dependencies
# Keep the runtime deps small: the extension host only requires `vscode-languageclient`
# and its transitive runtime deps. Everything else is build-time only.
node_modules/**
!node_modules/vscode-languageclient/**
!node_modules/vscode-languageserver-protocol/**
!node_modules/vscode-languageserver-types/**
!node_modules/vscode-jsonrpc/**
!node_modules/minimatch/**
!node_modules/brace-expansion/**
!node_modules/balanced-match/**
!node_modules/concat-map/**
!node_modules/semver/**

# Git
.git/**
.gitignore

# Build tools
bun.lock
package-lock.json

# Test files
test/**
**/*.test.ts

# Other unnecessary files
.vscode/**
*.vsix
convert-icon.js
icon.svg
icon-minimal.svg

# Keep these (don't ignore):
# - out/** (compiled extension)
# - bin/** (bundled binaries)
# - media/** (bundled webviews)
# - config/** (default config)
# - icon.png
# - README.md
# - package.json
